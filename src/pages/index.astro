---
import Layout from "../layouts/Layout.astro";

import Hero from "../components/sections/hero/Hero.astro";
import About from "../components/sections/about/About.astro";
import LandPreviews from "../components/sections/land-previews/LandPreviews.astro";

import dataModel from "../model/ContentfulModel";
const promotedLands = await dataModel.getPromotedLands();
---

<Layout pageTitle="مكتب الطيب للعقار">
  <Hero />
  <LandPreviews
    promotedLands={promotedLands}
    heading="المشاريع الحالية"
    subheading="مكتب الطيب للعقار - وكيلك العقاري الموثوق في الأنبار. نقدم لكم أفضل العروض العقارية بأسعار تنافسية. للاستشارة المجانية وجولة العقارات، نرجو زيارة مكتبنا في الفلوجة."
    scrollEffect={true}
    fullHeight={true}
    gradient={true}
  />
  <About />
</Layout>
